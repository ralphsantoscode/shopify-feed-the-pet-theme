{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "media_size": "medium",
        "constrain_to_viewport": true,
        "media_fit": "cover",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "none",
        "mobile_thumbnails": "show",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    },
    "54364a71-c0d3-443a-b7b3-93de6d60f02a": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "<div class=\"page-width\">\n<p>{{ product.description }}<\/p>",
        "color_scheme": "background-2",
        "padding_top": 40,
        "padding_bottom": 52
      }
    },
    "multicolumn-for-product-features": {
      "type": "multicolumn-for-product-features",
      "settings": {
        "title": "",
        "image_width": "third",
        "column_alignment": "center",
        "background_style": "none",
        "button_label": "",
        "color_scheme": "background-2",
        "columns_mobile": "2"
      }
    },
    "660cfc42-5696-439c-bc25-2158a6f29575": {
      "type": "custom-liquid",
      "custom_css": [
        ".description-list {}",
        ".description-item {display: flex; margin-bottom: 20px; text-align: left; flex-direction: row; \/* Default flex direction for all items *\/}",
        ".description-content {flex: 1; padding: 20px; display: flex; flex-direction: column; justify-content: center;}",
        ".description-item-image {flex: 1;}",
        ".description-item-image img {object-fit: cover; width: 100%; height: 100%; border-radius: var(--media-radius);}",
        ".description-item:nth-child(even) {text-align: right; flex-direction: row-reverse;}"
      ],
      "settings": {
        "custom_liquid": "<div class=\"page-width\">\n   <div class=\"description-list\">\n{%- for desc in product.metafields.custom.description_collage.value -%}\n        <div class=\"description-item\">\n<div class=\"description-item-image\">\n            <img src=\"{{ desc.image }}\" alt=\"Image 1\">\n       <\/div>     \n<div class=\"description-content\">\n                <h3>{{ desc.title }}<\/h3>\n                <p>{{ desc.text }}<\/p>\n            <\/div>\n        <\/div>\n{% endfor %}\n<\/div>\n<\/div>",
        "color_scheme": "background-2",
        "padding_top": 40,
        "padding_bottom": 52
      }
    }
  },
  "order": [
    "main",
    "related-products",
    "54364a71-c0d3-443a-b7b3-93de6d60f02a",
    "multicolumn-for-product-features",
    "660cfc42-5696-439c-bc25-2158a6f29575"
  ]
}